<h1>Listing tests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Service</th>
    <th>Check url</th>
    <th>Uuid</th>
    <th>Enabled</th>
    <th>Tags</th>
    <th>Opmode</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td><%= test.name %></td>
    <td><%= test.service %></td>
    <td><%= test.check_url %></td>
    <td><%= test.uuid %></td>
    <td><%= test.enabled %></td>
    <td><%= test.tags %></td>
    <td><%= test.opmode %></td>
    <td><%= test.status %></td>
    <td><%= link_to 'Show', test %></td>
    <td><%= link_to 'Edit', edit_test_path(test) %></td>
    <td><%= link_to 'Destroy', test, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

