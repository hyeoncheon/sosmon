<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <span class="label"><%= f.label :name %></span>
    <span class="input"><%= f.text_field :name %></span>
  </div>
  <div class="field">
    <span class="label"><%= f.label :portfolio %></span>
    <span class="input"><%= f.text_field :portfolio %></span>
  </div>
  <div class="field">
    <span class="label"><%= f.label :tags %></span>
    <span class="input"><%= f.text_field :tags %></span>
  </div>
  <div class="field">
    <span class="label"><%= f.label :client %></span>
    <span class="select"><%=
    select_tag(:client, options_from_collection_for_select(Client.all,
                                                           :id,
                                                           :name)) %></span>
  </div>
  <div class="field">
    <span class="label"><%= f.label :desc %></span>
    <span class="input"><%= f.text_area :desc %></span>
  </div>
  <div class="actions">
    <span class="button"><%= f.submit %></span>
  </div>
<% end %>
